<h3>
	Add a new product here:
</h3>

<% if flash[:alert].present? %>
	<p> <%= flash[:alert] %> </p>
<% end %>


<%= form_for [@user, @product] do |f| %>
	<div>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</div>
	<div>
		<%= f.label :description %>	
		<%= f.text_field :description %>
	</div>
	<div>
		<%= f.label :deadline %>	
		<%= f.date_field :deadline %>
	</div>
	<div>
	<%= f.submit "Add product" %>
	<div>

<% end %>


